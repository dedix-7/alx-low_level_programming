CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o:%.c
	$(CC) -c -o $@ $^
clean: $(NAME)
	find . -name "*~" -type f -delete
	find . -name "*.swp" -type f -delete
	$(RM) $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	find . -name "*~" -type f -delete
	find . -name "*.swp" -type f -delete
	$(RM) $(NAME)
	$(RM) $(OBJ)

re: oclean all

.PHONY: clean oclean re fclean
